<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="test1.BtPrinter">
    <ScrollView>
        <VerticalStackLayout
            Margin="50"
            Spacing="25">

            <Label
                Text="Hello, World!"
                x:Name="PrinterName" Width="100" Height="200" 
                HorizontalOptions="Center"
                BackgroundColor="Honeydew"
                TextColor="Black"/>

            <Button
                x:Name="CounterBtn"
                Clicked="OnTestClicked"
                HorizontalOptions="Center"
                Text="测试" />  
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
